
@{
    ViewBag.Title = "UserList";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

@model List<DTO.UserDTO>
<section class="content-header">
    <ol class="breadcrumb float-sm-left">
        <li class="breadcrumb-item"><a>Admin</a></li>
        <li class="breadcrumb-item"><a>User</a></li>
        <li class="breadcrumb-item active"><a>User List</a></li>
    </ol>
    <button type="submit" class="btn btn-primary float-right" onclick="window.location.href='/Admin/User/AddUser'">Add User</button>
</section>
<br />
<br />
<div class="card">

    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th style="text-align: center">Name</th>
                    <th style="text-align: center">User Name</th>
                    <th style="text-align: center">Image</th>
                    <th style="text-align: center">Update</th>
                    <th style="text-align: center">Delete</th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tbody>
                    <tr id="a_@item.ID">
                        <td align="center" valign="middle">@item.Name</td>
                        <td align="center" valign="middle">@item.Username</td>
                        <td align="center" valign="middle"><img src="~/Areas/Admin/Content/UserImage/@item.Imagepath" width="60" height="40" /></td>
                        <td class="button-cell">
                            <div class="button-wrapper">
                                <a href="/Admin/User/UpdateUser/@item.ID">
                                    <img src="~/Areas/Admin/Icons/Update.png" />
                                </a>
                            </div>
                        </td>
                        <td class="button-cell">
                            <div class="button-wrapper">
                                <a href="#">
                                    <img src="~/Areas/Admin/Icons/delete.png" data-toggle="modal" data-target="#modalmessage" onclick="AskQuestion('/Admin/User/DeleteUser/',@item.ID)" />
                                </a>
                            </div>
                        </td>

                    </tr>

                </tbody>
            }
            <tfoot>
                <tr>
                    <th>Name</th>
                    <th>User Name</th>
                    <th>Image</th>
                    <th>Update</th>
                    <th>Delete</th>
                </tr>
            </tfoot>
        </table>
    </div>
    @Html.Partial("~/Areas/Admin/Views/Shared/ModalMessage.cshtml")
    <!-- /.card-body -->
</div>
<script src="~/Areas/Admin/Content/JS/DeleteRecord.js"></script>



